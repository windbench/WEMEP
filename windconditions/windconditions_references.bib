	year = {2003},
	pages = {501--530}
}

@article{silva_lopes_simulation_2007,
	title = {Simulation of the {Askervein} flow. {Part} 2: {Large}-eddy simulations},
	volume = {125},
	issn = {1573-1472},
	shorttitle = {Simulation of the {Askervein} flow. {Part} 2},
	url = {https://doi.org/10.1007/s10546-007-9195-4},
	doi = {10.1007/s10546-007-9195-4},
	abstract = {Large-eddy simulations of the neutrally stratified flow over the Askervein Hill were performed, to improve the knowledge of the flow obtained from field measurements and numerical simulations with Reynolds averaged Navier-Stokes (RANS) methods. A Lagrangian dynamic subgrid model was used but, to avoid the underdissipative character near the ground, it was merged with a damped Smagorinsky model. Simulations of a flat boundary-layer flow with this subgrid model showed that the turbulent vertical motions and shear stress were better resolved using grids with a stream to spanwise aspect ratio Δx / Δy = 2 than with an aspect ratio Δx / Δy = 1. Regarding the flow over the Askervein Hill, it was found that large-eddy simulations provide an acceptable solution for the mean-velocity field and better predictions of the turbulent kinetic energy in the upstream side of the hill than the \$\$k - {\textbackslash}varepsilon\$\$model. However, as with the \$\$k - {\textbackslash}varepsilon\$\$model, grid convergence was not achieved in the lee side and the size of the zone with reversed flow increased with the grid refinement. Nevertheless, the existence of the intermittent separation predicted with unsteady RANS in part one of this work seems unquestionable, due to the deceleration of the flow. In our opinion, a better modelling of the decelerating boundary layer in the lee side is required to improve the results obtained using equilibrium assumptions and achieve grid convergence.},
	language = {en},
	number = {1},
	urldate = {2020-07-23},
	journal = {Boundary-Layer Meteorol},
	author = {Silva Lopes, A. and Palma, J. M. L. M. and Castro, F. A.},
	month = oct,
	year = {2007},
	pages = {85--108}
}

